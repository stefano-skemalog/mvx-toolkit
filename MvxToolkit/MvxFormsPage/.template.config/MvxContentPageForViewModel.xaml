<?xml version="1.0" encoding="UTF-8"?>
<mvxViews:$mvxpagetype$
    x:TypeArguments="viewModels:$viewmodelname$"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mvxViews="clr-namespace:Arianna.Web.Mobile.MvvmCross"
    xmlns:viewModels="clr-namespace:Arianna.Mobile.Core.ViewModels;assembly=Arianna.Mobile.Core"
    x:Class="$rootnamespace$.$viewname$">
$if$ ($mvxpagetype$ == MvxContentPage)
  <ContentPage.Content>
      <StackLayout>
          <Label Text="$mvxpagetype$ - $viewname$" />
      </StackLayout>
  </ContentPage.Content>
$endif$
</mvxViews:$mvxpagetype$>